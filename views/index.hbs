<form class="temp-form" action="/temp" method="post">
  <p><label for="target">Set temperature (F)</label></p>
  <input type="number" id="target" name="target" value="70">
  <input type="submit" value="submit" class="btn">
</form>

<form action="/mode" method="post" accept-charset="utf-8">
  <select id="mode" name="mode">
    <option value="home">Home</option>
    <option value="away">Away</option>
  </select>
  <input type="submit" value="submit" class="btn">
</form>

<form action="/fanmode" method="post" accept-charset="utf-8">
  <select id="fanmode" name="fanmode">
    <option value="auto">Auto</option>
    <option value="on">On</option>
  </select>
  <input type="submit" value="submit" class="btn">
</form>

